<div class="container mt-5"><!--Abhinav Kaushik-->
  <h1 style="color: blue; font-weight: bold; font-size: 62px; text-align: center;">Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <span id="loginlogo" class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email"><br>
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                  <input type="email" class="form-control" name="username" placeholder="Email" aria-describedby="basic-addon1">
                </div>
              </label>

            </div>
            <div class="form-group">
              <label for="password">
                <label for="basic-url"></label>
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon3"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                  <input type="password" class="form-control" name="password" placeholder="Password" id="basic-url" aria-describedby="basic-addon3">
                </div>
                </div>
              </label>
              <br>
            <button type="submit" class="btn btn-info" style="font-size: 22px; width: 370px;">Register</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
